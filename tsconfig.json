{
    "include": [
        "./src/*"
    ],
    "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es2018",
      "module": "commonjs",
      "esModuleInterop": true, 
      "forceConsistentCasingInFileNames": true, 
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true
    }
  }